<project default="create_plugin_jar" name="Create plugin 'DatabaseWriter'">
  <!--ANT 1.7 is required -->
  <property name="lib-dir" value="../../3rdparty"/>
  <target name="create_plugin_jar">
    <jar destfile="../../../build/monitorplugins/DatabaseWriter.jar" 
         filesetmanifest="mergewithoutmain">  
      <fileset dir="bin"/>
      <zipgroupfileset dir="${lib-dir}" includes="sqlite-jdbc-3.8.11.1.jar"/>
    </jar>
  </target>
</project>
