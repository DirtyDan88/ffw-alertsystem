<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           elementFormDefault="qualified">
  <!-- load the application-xsd -->
  <xs:include schemaLocation="schema-application-config.xsd"/>

  <!-- root node -->
  <xs:element name="ffw-alertreceiver-config">
    <xs:complexType>
      <xs:complexContent>
        <xs:extension base="ffw-application-config">
          <xs:sequence>
            <!-- local port -->
            <xs:element name="receiver-port" type="xs:int"/>
            <!-- publisher class -->
            <xs:element name="publisher-package" type="xs:string"/>
            <xs:element name="publisher-class" type="xs:string"/>
            <!-- publisher params -->
            <xs:element name="publisher-params">
              <xs:complexType>
                <xs:sequence>
                  <xs:any processContents="skip" minOccurs="0" maxOccurs="unbounded"/>
                </xs:sequence>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:element>
</xs:schema>
