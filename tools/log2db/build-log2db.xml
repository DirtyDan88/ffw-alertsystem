<project default="create_run_jar" name="Create runnable jar-file 'ffw-alertsystem-log2db'">
  <!--ANT 1.7 is required -->
  <property name="lib-dir" value="../../src/3rdparty"/>
  <target name="create_run_jar">
    <jar destfile="../../build/ffw-alertsystem-log2db.jar" 
         filesetmanifest="mergewithoutmain">
      <manifest>
        <attribute name="Main-Class" value="ffw.alertsystem.tools.log2db.Log2DB"/>
        <attribute name="Class-Path" value="."/>
      </manifest>
      <fileset dir="bin"/>
      <zipgroupfileset dir="${lib-dir}" includes="jcommander-1.48.jar"/>
      <zipgroupfileset dir="${lib-dir}" includes="javax.mail.jar"/>
      <zipgroupfileset dir="${lib-dir}" includes="sqlite-jdbc-3.8.11.1.jar"/>
    </jar>
  </target>
</project>
